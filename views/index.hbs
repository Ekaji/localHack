<div class="col-10 mx-auto my-4">
    <div class="w-25 mx-auto my-5 text-center">
        <button class="btn btn-warning" data-toggle="modal" data-target="#addWord">Add Words</button>
    </div>
    <div class="card m-2">
        <div class="card-header">
            Quote
            <button class="mx-2 btn btn-sm btn-primary" data-toggle="modal" data-target="#defineModal">Define</button>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
            </blockquote>
        </div>
        {{!-- <div class="card-footer">
            Related Words
        </div> --}}
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addWord" tabindex="-1" role="dialog" aria-labelledby="addWordLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addWordLabel">Add a word for Definition</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="">
            <div class="form-group">
                <label for="word">Word/Phrase</label>
                <input type="text" name="word" id="word">
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="defineModal" tabindex="-1" role="dialog" aria-labelledby="defineModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="defineModalLabel">Define</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <textarea name="definition" id="definition" cols="30" rows="10"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>